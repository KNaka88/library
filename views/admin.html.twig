<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Admin</title>
    </head>
    <body>
        <h1>My admin</h1>
        <h2>Add Book</h2>
        <form class="add_books" action="/add_book" method="post">
            <label for="title">Title: </label>
            <input type="text" name="title" value="">
            <label for="authors">Authors (separated by commas): </label>
            <input type="text" name="authors" value="">
            <label for="copies">Copies: </label>
            <input type="number" name="copies" value="">
            <button type="submit" name="button">Add Book</button>
        </form>

        {% if books is not empty %}
            <ul>
            {% for book in books %}
                <a href='/edit/{{book.getId}}'><li>Book Title: {{book.getTitle}} Author:
                    {% for author in book.getAuthors %}
                        {{author.getName}}
                    {% endfor %}
                    Copies: {{book.getCopies()|length}}</li></a>
            {% endfor %}
            </ul>
        {% endif %}
    </body>
</html>
